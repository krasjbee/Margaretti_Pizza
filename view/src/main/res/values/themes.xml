<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MargarettiPizza" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <!--fixme-->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:statusBarColor">@color/main_theme_color</item>
    </style>

    <style name="PizzaPicAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="PizzaPicAppearance.Cart" parent="PizzaPicAppearance">
        <item name="cornerSize">20dp</item>
    </style>


    <style name="BottomBarShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="PizzaText">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="PizzaText.Name" parent="PizzaText">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28sp</item>
        <item name="fontWeight">600</item>
        <item name="fontFamily">@font/lato_semibold</item>
    </style>

    <style name="PizzaText.Description" parent="PizzaText">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">14.4sp</item>
        <item name="fontWeight">400</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="PizzaText.Toolbar" parent="PizzaText">
        <item name="android:textSize">28sp</item>
        <item name="android:titleTextColor">@color/text_color_black</item>
    </style>

    <style name="PizzaText.Toolbar.Cart" parent="PizzaText.Toolbar">
        <item name="fontWeight">400</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="PizzaText.Toolbar.Menu" parent="PizzaText.Toolbar">
        <item name="fontWeight">600</item>
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="PizzaText.Price" parent="PizzaText">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">26.4sp</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="PizzaText.Details.AddtoCart" parent="PizzaText">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">21.6sp</item>
        <item name="fontWeight">900</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>


</resources>